<?xml version="1.0" encoding="utf-8"?>
<library>
  
  <extension id="something.unique">
    <entryClass>blackberry.HelloWorldExtension</entryClass>
  </extension>
  
  <platforms>
    <platform value="AIR">
      <target version="default" config="AIR_XHR" />
    </platform>
  </platforms>

  <configurations>
    <configuration name="AIR_XHR" version="1.0" comment="For XHR architecture for Air implementation">
      <src type="text/actionscript" path="java" comment="API implementation in ActionScript" />
      <src type="text/javascript" path="js" comment="API JavaScript layer" />
    </configuration>
  </configurations>

  <features>
    <feature id="blackberry.helloworld" version="1.0.0"/>
  </features>

</library>